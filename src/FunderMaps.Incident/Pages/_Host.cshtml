@page "/"
@using Microsoft.AspNetCore.Components.Web
@namespace FunderMaps.Incident.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <meta name="application-name" content="FunderMaps Incidenten Loket" />
    <meta name="author" content="FunderMaps B.V." />
    <meta name="description" content="Incidenten loket voor het melden van schade aan woning" />
    <meta name="keywords" content="fundering, loket, incidenten, zakking, pandzakking, melding, woningschade" />
    <meta name="referrer" content="strict-origin" />

    <environment include="Staging,Production">
        <meta http-equiv="Content-Security-Policy" content="base-uri 'self';
                default-src https:;
                img-src data: https:;
                object-src 'none';
                frame-src 'none';
                connect-src 'self' https://*.mapbox.com/;
                script-src 'self' 'unsafe-inline' https://*.mapbox.com/;
                style-src 'self' 'unsafe-inline' https://*.mapbox.com/;
                worker-src 'self' blob:;">
    </environment>

    <base href="~/" />

    <link href="css/variables.css" rel="stylesheet" />
    <link href="css/root.css" rel="stylesheet" />
    <link href="css/blazor.css" rel="stylesheet" />
    <link href="FunderMaps.Incident.styles.css" rel="stylesheet" />

    <link href="https://api.mapbox.com/mapbox-gl-js/v2.12.0/mapbox-gl.css" rel="stylesheet" />

    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />

</head>
<body>

    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
</body>
</html>
