@page "/contractor/{Offset:int?}"

<PageTitle>Contractor</PageTitle>

<h1>Contractor</h1>

@inject FunderMaps.Core.Interfaces.Repositories.IOrganizationRepository OrganizationRepository;

@if (contractors == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contractor in contractors)
            {
                <tr>
                    <td>@contractor.Id</td>
                    <td>@contractor.Name</td>
                    <td>@contractor.Email</td>
                </tr>
            }
        </tbody>
    </table>

    <nav aria-label="Page navigation example">
    <ul class="pagination">
        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
        @for (var i = 1; i <= pageCount; i++)
            {
                <li class="page-item">
                    <a class="page-link" href="/contractor/@i">@i</a>
                    @* <NavLink href="/contractor/i">@i</NavLink> *@
                </li>
            }
            <li class="page-item"><a class="page-link" href="#">Next</a></li>
        </ul>
    </nav>
}

@code {
    private List<Core.Entities.Organization> contractors = new();

    [Parameter]
    public int Offset { get; set; } = 0;

    private long pageCount = 0;

    protected override async Task OnInitializedAsync()
    {
        pageCount = await OrganizationRepository.CountAsync() / 2;

        await foreach (var item in OrganizationRepository.ListAllAsync(new Core.Navigation
        {
            Limit = 2,
            Offset = Offset * 2,
        }))
        {
            contractors.Add(item);
        }
    }
}
