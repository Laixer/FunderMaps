@page "/incident"

@using Core

<PageTitle>Incidenten</PageTitle>

<h1>Incidenten</h1>

@inject FunderMaps.Core.Interfaces.Repositories.IIncidentRepository IncidentRepository;

@if (incidents == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>CreateDate</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contractor in incidents)
            {
                <tr>
                    <td><NavLink href="@contractor.DetailLink">@contractor.Id</NavLink></td>
                    <td>@contractor.CreateDate</td>
                    <td>@contractor.Email</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    public class Woei
    {
        public string Id { get; set; }

        public string Email { get; set; }

        public DateTime CreateDate { get; set; }

        public string DetailLink { get => $"/incident/{Id}"; }
    }

    private List<Woei> incidents = new();

    protected override async Task OnInitializedAsync()
    {
        await foreach (var item in IncidentRepository.ListAllRecentAsync())
        {
            incidents.Add(new Woei
            {
                Id = item.Id,
                CreateDate = item.CreateDate,
                Email = item.Email,
            });
        }
    }
}
