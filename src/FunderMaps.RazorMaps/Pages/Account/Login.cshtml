<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

<style>
    body,
    html {
        height: 100%;
    }

    body {
        margin: 0;
        font-family: Gibson, sans-serif;
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.625;
        color: #7f8fa4;
        text-align: left;
        background-color: #eff3f6;
    }

    .LoginLayout {
        height: 100%;
        width: 100%;
        margin-top: 200px;
    }

    .FadedBackgroundCover {
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
        background-color: #17a4ea;
        background-repeat: no-repeat;
        background-size: cover;
    }

    .LoginLayout__modal {
        position: relative;
        border-radius: 5px;
        overflow: hidden;
    }

    .LoginBranding__copyright {
        position: absolute;
        bottom: 20px;
        left: 20px;
    }

    .LoginBranding__logo {
        position: absolute;
        top: 20px;
        left: 20px;
    }

    .LoginBranding {
        position: relative;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
    }

    .LoginLayout__content {
        background: #fff;
        width: 480px;
        height: 480px;
    }
</style>

<div class="LoginLayout d-flex justify-content-center" id="app">
    <div class="FadedBackgroundCover"
        style="background-image: url('https://app.fundermaps.com/img/background.90de9fa2.png');"></div>
    <div class="LoginLayout__modal align-self-center d-flex flex-wrap justify-content-center">

        <div class="LoginBranding"><img src="https://app.fundermaps.com/img/focus.3bd3ae99.jpg" width="480" height="480"
                class="d-none d-lg-block">
            <img src="https://app.fundermaps.com/img/logo.93735295.svg" class="Logo LoginBranding__logo"
                alt="FunderMaps logo">
            <span class="copyright LoginBranding__copyright test">Â© Copyright 2023 FunderMaps</span>
        </div>

        <div class="LoginLayout__content p-5">
            <div class="LoginForm">
                <h1 class="mb-5">Inloggen</h1>
                <form id="myform" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <fieldset class="form-group FormField" id="__BVID__21">
                        <legend tabindex="-1" class="bv-no-focus-ring col-form-label pt-0" id="__BVID__21__BV_label_">
                            <span>E-mail</span>
                        </legend>
                        <div>
                            <div role="group" class="input-group">
                                @* <input type="email" placeholder="naam@bedrijf.nl" autocomplete="username"
                                class="form-control"> *@
                                <input asp-for="Username" class="form-control" />
                            </div>
                            <div tabindex="-1" aria-live="assertive" aria-atomic="true" class="invalid-feedback"
                                id="__BVID__21__BV_feedback_invalid_"> Dit is een vereist veld </div>
                        </div>
                    </fieldset>
                    <fieldset class="form-group FormField mt-2" id="__BVID__28">
                        <legend tabindex="-1" class="bv-no-focus-ring col-form-label pt-0" id="__BVID__28__BV_label_">
                            <span>Wachtwoord</span>
                        </legend>
                        <div>
                            <div role="group" class="input-group">
                                @* <input type="password" placeholder="" autocomplete="current-password"
                                class="form-control"> *@
                                <input asp-for="Password" type="password" class="form-control" />
                            </div>
                            <div tabindex="-1" aria-live="assertive" aria-atomic="true" class="invalid-feedback"
                                id="__BVID__28__BV_feedback_invalid_"> Dit is een vereist veld </div>
                        </div>
                    </fieldset>
                    <button type="submit"
                        class="btn btn-success btn-lg btn-block rounded-pill font-weight-bold border-0 mt-3 p-3">
                        Aanmelden </button>
                </form>
            </div>
        </div>
    </div>
</div>
