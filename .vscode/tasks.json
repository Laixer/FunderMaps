{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}"
            ],
            "problemMatcher": "$msCompile",
            "promptOnClose": true,
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test"
            ],
            "problemMatcher": "$msCompile",
            "promptOnClose": true
        },
        {
            "label": "clean",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean"
            ],
            "problemMatcher": "$msCompile",
            "promptOnClose": true
        },
        {
            "label": "package outdated",
            "command": "dotnet",
            "type": "process",
            "args": [
                "list",
                "package",
                "--outdated"
            ],
            "problemMatcher": "$msCompile",
            "promptOnClose": true
        },
    ]
}
